&cntrl
  ! Minimization options
  imin=1,         ! Turn on minimization
  ntx=1,          ! Read coordinates  but not velocities 
                  ! from ASCII formatted rst7
  irest=0,        ! Do not restart simulation.
  maxcyc=10000,   ! Maximum number of minimization cycles
  ncyc=5000,      ! 5000 steepest-descent steps, better 
                  ! for strained systems
  ntb=1,          ! Periodic boundaries for constant volume
  iwrap=1,        ! Wrap coordinates into primary box

  ! Potential energy function options
  cut=12.0,
  fswitch=10.0,

  ! Control how often information is printed to the output file
  ntpr=100,      ! Print energies every 100 steps
  ntwx=0,        ! No amber mdcrd trajectory file written
/
